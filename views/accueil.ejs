<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <title>Le Jeu du Juste Prix – Accueil</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<div class="container py-5 text-center">
  <h1 class="mb-4">LE JEU DU JUSTE&nbsp;PRIX</h1>

  <% if (typeof erreur !== 'undefined') { %>
    <div class="alert alert-danger"><%= erreur %></div>
  <% } %>

  <div class="row justify-content-center">
    <div class="card shadow col-12 col-md-8 col-lg-6">
      <form action="/" method="post" class="card-body">

        <!-- Joueur 1 -->
        <div class="form-floating mb-3">
          <input type="text" id="prenom" name="prenom" class="form-control" placeholder="Prénom Joueur 1">
          <label for="prenom">Joueur 2 (celui qui devine le prix)</label>
        </div>

        <!-- Objet -->
        <div class="form-floating mb-3">
          <input type="text" id="objet" name="objet" class="form-control" placeholder="Nom de l'objet">
          <label for="objet">Objet</label>
        </div>

        <!-- Prix -->
        <div class="form-floating mb-4">
          <input type="number" id="prix" name="prix" class="form-control" placeholder="Prix secret">
          <label for="prix">Prix secret (€)</label>
        </div>

        <button id="submitFormInitGame" type="submit" class="btn btn-dark btn-lg" hidden>
          Lancer le jeu
        </button>
      </form>
    </div>
  </div>
</div>

<script>
  const champs    = document.querySelectorAll('#prenom, #objet, #prix');
  const bouton    = document.getElementById('submitFormInitGame');

  const verifier  = () => {
    const toutRempli = [...champs].every(input => input.value.trim() !== '');
    bouton.hidden = !toutRempli;
  };

  champs.forEach(input => input.addEventListener('input', verifier));
</script>
</body>
</html>
